{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Route API calls to your Node function
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*)",  // Handle all other routes for client-side routing
      "dest": "/src/index.ts" // This directs all non-API requests to your React app
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}

  
